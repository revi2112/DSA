class Solution {
    public int maxProfit(int[] prices) {
        /*
        to get max profit on that particular day we need to keep the min price of the stock prior to that
        */

        int maxP = 0;
        int cost_price = prices[0];//day we bought the stock // we took 0 because no profit can be made by selling on that day

        for(int i = 1; i<prices.length; i++ ){ 
            maxP = Math.max(prices[i] - cost_price, maxP);
            cost_price = Math.min(cost_price, prices[i]); // keeping track of small number to be considered as min cost price  
        }

      
        return maxP;
    }
}
